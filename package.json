{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:content": "concurrently -n next,content \"next-remote-watch content\" \"chokidar 'content/**' -c 'npm run create-indexes && npm run copy-static-content'\"",
    "build": "npm run create-indexes && npm run copy-static-content && npm run create-rss-feed && npm run build:next",
    "build:next": "next build",
    "start": "next start",
    "lint": "next lint",
    "check-types": "tsc --noEmit",
    "create-indexes": "tsx ./content-processing/create-indexes.ts",
    "create-rss-feed": "tsx ./content-processing/create-rss-feed.ts",
    "copy-static-content": "rsync -avh --delete --exclude='**/*.mdx' content/articles/ public/static-content/",
    "fmt": "prettier --write --ignore-path .gitignore .",
    "fmt.check": "prettier --check --ignore-path .gitignore ."
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mdx-js/react": "^2.1.5",
    "fp-ts": "^2.13.1",
    "gray-matter": "^4.0.3",
    "next": "13.0.1",
    "next-mdx-remote": "^4.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reading-time": "^1.5.0",
    "rehype-highlight": "^6.0.0",
    "rehype-img-size": "^1.0.1",
    "remark": "^14.0.2",
    "rimraf": "^3.0.2",
    "strip-markdown": "^5.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@mdx-js/loader": "^2.1.5",
    "@next/mdx": "^13.0.1",
    "@types/glob": "^8.0.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@types/rimraf": "^3.0.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.5.0",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.1",
    "glob": "^8.0.3",
    "next-remote-watch": "^2.0.0",
    "prettier": "^2.7.1",
    "remark-frontmatter": "^4.0.1",
    "tsx": "^4.7.1",
    "typescript": "4.8.4"
  }
}
